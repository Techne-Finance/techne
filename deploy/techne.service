[Unit]
Description=Techne.finance API Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/techne-finance
Environment=PATH=/opt/techne-finance/venv/bin
EnvironmentFile=/opt/techne-finance/.env
ExecStart=/opt/techne-finance/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
